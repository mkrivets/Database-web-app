@model Cats.CatTemper

@{
    ViewData["Title"] = "Delete";
}
<head>
    <style>
        body {
            background-image: url(https://images.unsplash.com/photo-1510137600163-2729bc6959a6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1201&q=80);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        table {
            background-color: rgba(0, 0, 0, 0.55);
            border-bottom-color: black;
        }

        .display-5 {
            color: white;
        }

        .row {
            background-color: rgba(0, 0, 0, 0.45);
            color: white;
        }

        .loc-r {
            margin-right: 4px;
        }

        .btn {
            background-color: black;
            border: 2px solid white;
        }
    </style>
</head>


<h1 class="display-5">Delete</h1>

<h3 class="display-5">Are you sure you want to delete this?</h3>
<div>
    <hr class="display-5" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cat.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Temper)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Temper.Name)
        </dd>
    </dl>

    <form class="display-5" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
